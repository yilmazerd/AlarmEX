<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erdemyilmaz.alarmex.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Time to take your medicine"
            android:textAlignment="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textViewBackground"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:text="ELIQUIS 50 mg, TAKE 2, SWALLOW WITH WATER\n Aspirin 30 mg Take 2, SWALLOW WITH WATER \n Lipitor 20mg TAKE 1, SWALLOW WITH WATER "
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonABC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="167dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remind in 10 minutes"
            android:textSize="60sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
